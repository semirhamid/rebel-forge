---
import Layout from '../../layouts/Layout.astro';
import { products } from '../../data/products';

export function getStaticPaths() {
    return products.map((product) => ({
        params: { id: product.id },
        props: { product },
    }));
}

const { product } = Astro.props;
---

<Layout>
    <div class="min-h-screen bg-background py-8">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <!-- Breadcrumb -->
                <nav class="mb-8">
                    <a href="/" class="text-muted-foreground hover:text-primary transition-colors">
                        ‚Üê Back to Products
                    </a>
                </nav>

                <!-- Product Details -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Product Image -->
                    <div class="aspect-square overflow-hidden rounded-lg">
                        <img
                            src={product.image}
                            alt={product.name}
                            class="w-full h-full object-cover"
                        />
                    </div>

                    <!-- Product Info -->
                    <div class="space-y-6">
                        <div>
                            <span class="text-sm text-muted-foreground border border-border px-2 py-1 rounded">
                                {product.category}
                            </span>
                            <h1 class="text-3xl font-bold font-orbitron mt-2 text-foreground">
                                {product.name}
                            </h1>
                        </div>

                        <!-- Rating -->
                        <div class="flex items-center gap-2">
                            <div class="flex">
                                {Array.from({ length: 5 }, (_, i) => (
                                    <svg
                                        class={`w-5 h-5 ${
                                            i < Math.floor(product.rating)
                                                ? "fill-sw-yellow text-sw-yellow"
                                                : "text-muted-foreground"
                                        }`}
                                        fill="currentColor"
                                        viewBox="0 0 20 20"
                                    >
                                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                                    </svg>
                                ))}
                            </div>
                            <span class="text-muted-foreground">
                                {product.rating} ({product.reviews} reviews)
                            </span>
                        </div>

                        <!-- Price -->
                        <div class="flex items-center gap-4">
                            <span class="text-3xl font-bold text-primary">
                                ${product.price}
                            </span>
                            {product.originalPrice && (
                                <span class="text-xl text-muted-foreground line-through">
                                    ${product.originalPrice}
                                </span>
                            )}
                        </div>

                        <!-- Description -->
                        <div>
                            <h3 class="text-lg font-semibold mb-2">Description</h3>
                            <p class="text-muted-foreground leading-relaxed">
                                {product.description}
                            </p>
                        </div>

                        <!-- Add to Cart -->
                        <div class="pt-4">
                            {product.inStock ? (
                                <div class="space-y-4">
                                    <div class="flex items-center gap-2 text-green-500">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                                        </svg>
                                        <span class="font-medium">In Stock</span>
                                    </div>
                                    <div class="text-sm text-muted-foreground">
                                        This product will be added to your cart and you can proceed to checkout.
                                    </div>
                                </div>
                            ) : (
                                <div class="space-y-4">
                                    <div class="flex items-center gap-2 text-red-500">
                                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                        </svg>
                                        <span class="font-medium">Out of Stock</span>
                                    </div>
                                    <div class="text-sm text-muted-foreground">
                                        This product is currently unavailable.
                                    </div>
                                </div>
                            )}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
